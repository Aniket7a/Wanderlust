<body>
   <div class="flash-container">
  <% if (success && success.length > 0) { %>
    <div class="flash success"><%= success %></div>
  <% } %>
  <% if (error && error.length > 0) { %>
    <div class="flash error"><%= error %></div>
  <% } %>
</div>


    <div class="background-elements">
        <div class="circle circle-1"></div>
        <div class="circle circle-2"></div>
        <div class="circle circle-3"></div>
    </div>
    
    <div class="container">
        <div class="brand-panel">
            <div class="logo">
               
              <i class="fa-solid fa-compass-drafting" style="color: #fe424d;"></i>  Wanderlust
            </div>
            
            <div class="brand-content">
                <h2>Reach the guests you want—those who truly value your property—with Wanderlust.</h2>
                <p>Signing up is free, fast and easy.</p>
                
                <ul class="benefits">
                    <li><i class="fas fa-check-circle"></i> Access to millions of travelers worldwide</li>
                    <li><i class="fas fa-check-circle"></i> Free registration with no upfront costs</li>
                    <li><i class="fas fa-check-circle"></i> Easy-to-use dashboard for managing your property</li>
                    <li><i class="fas fa-check-circle"></i> Dedicated support team available 24/7</li>
                    <li><i class="fas fa-check-circle"></i> Competitive commission rates</li>
                </ul>
            </div>
        </div>
        
        <div class="form-panel">
            <div class="form-header">
                <h1>What would you like to list?</h1>
                <p>Select the option that best describes your property</p>
            </div>
            
            <div class="options">
           <a href="/listings/new" style="text-decoration: none;">    <div class="option-card selected">
                  <h3><i class="fas fa-building"></i> Lodging</h3>
                    <p>A hotel, motel, resort, bed and breakfast, or other traditional lodging establishment.</p>
                </div>
                </a> 
                <div class="option-card">
                    <h3><i class="fas fa-home"></i> Private residence(Currently not Available)</h3>
                    <p>A private home, apartment, vacation rental, villa, or other residential property.</p>
                </div>
            </div>
            
            <!-- <button class="continue-btn">Continue to Registration</button> -->
            
            <div class="footer-links">
                <a href="#">Terms of Service</a>
                <a href="#">Privacy Policy</a>
                <a href="#">Help Center</a>
                <a href="#">Contact Support</a>
            </div>
        </div>
    </div>

    <script>
        // Add card selection functionality
        document.querySelectorAll('.option-card').forEach(card => {
            card.addEventListener('click', function() {
                // Remove selected class from all cards
                document.querySelectorAll('.option-card').forEach(c => {
                    c.classList.remove('selected');
                });
                
                // Add selected class to clicked card
                this.classList.add('selected');
            });
        });
        
        // Add button animation
        const continueBtn = document.querySelector('.continue-btn');
        continueBtn.addEventListener('click', function() {
            this.textContent = 'Processing...';
            this.disabled = true;
            
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-check"></i> Registration Started!';
                
                // Create a success effect
                const successEffect = document.createElement('div');
                successEffect.style.position = 'fixed';
                successEffect.style.top = '0';
                successEffect.style.left = '0';
                successEffect.style.width = '100%';
                successEffect.style.height = '100%';
                successEffect.style.background = 'rgba(255, 255, 255, 0.9)';
                successEffect.style.display = 'flex';
                successEffect.style.justifyContent = 'center';
                successEffect.style.alignItems = 'center';
                successEffect.style.zIndex = '1000';
                successEffect.style.opacity = '0';
                successEffect.style.animation = 'fadeIn 0.5s forwards';
                successEffect.innerHTML = `
                    <div style="text-align: center; padding: 40px; background: white; border-radius: 20px; box-shadow: 0 10px 40px rgba(0, 60, 130, 0.2);">
                        <i class="fas fa-check-circle" style="font-size: 60px; color: #00a651; margin-bottom: 20px;"></i>
                        <h2 style="color: #003d7c; margin-bottom: 15px;">Registration Started!</h2>
                        <p style="color: #5a6d87; max-width: 400px; margin-bottom: 30px; line-height: 1.6;">
                            Thank you for choosing Expedia Partner Central. We're now preparing your registration process.
                        </p>
                        <button style="background: #0077cc; color: white; border: none; padding: 12px 30px; border-radius: 8px; font-size: 16px; cursor: pointer;">
                            Continue Setup
                        </button>
                    </div>
                `;
                
                document.body.appendChild(successEffect);
                
                // Add animation for the success effect
                const style = document.createElement('style');
                style.innerHTML = `
                    @keyframes fadeIn {
                        from { opacity: 0; }
                        to { opacity: 1; }
                    }
                `;
                document.head.appendChild(style);
                
            }, 1000);
        });
    </script>
