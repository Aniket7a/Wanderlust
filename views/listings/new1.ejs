     <style>
        .flash-container {
  position: fixed;
  top: 20px;
  left: 50%;
  transform: translateX(-50%);
  z-index: 9999;
  width: max-content;
}

.flash {
  padding: 10px 20px;
  border-radius: 5px;
  margin-bottom: 10px;
  font-weight: bold;
  color: white;
}

.flash.success {
  background-color: #28a745;
}

.flash.error {
  background-color: #dc3545;
}

        * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
    background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    position: relative;
    overflow-x: hidden;
}

/* Background Elements */
.background-elements {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
}

.circle {
    position: absolute;
    border-radius: 50%;
    opacity: 0.1;
}

.circle-1 {
    width: 400px;
    height: 400px;
    background: #c40028;
    top: -200px;
    right: -100px;
}

.circle-2 {
    width: 300px;
    height: 300px;
    background: #ff5c5c;
    bottom: -150px;
    left: -100px;
}

.circle-3 {
    width: 200px;
    height: 200px;
    background: #b8001f;
    top: 40%;
    left: 10%;
}

/* Main Container */
.container {
    width: 100%;
    max-width: 1000px;
    background: white;
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 20px 50px rgba(196, 0, 40, 0.15);
    display: flex;
    min-height: 600px;
}

/* Left Panel - Branding */
.brand-panel {
    flex: 1;
    background: linear-gradient(135deg, #c40028 0%, #ff5c5c 100%);
    color: white;
    padding: 50px 40px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    overflow: hidden;
}

.brand-panel::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('https://www.expediagroup.com/content/dam/exphome/background-texture.png') no-repeat center/cover;
    opacity: 0.1;
}

.logo {
    display: flex;
    align-items: center;
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 30px;
    position: relative;
}

.logo i {
    margin-right: 15px;
    font-size: 32px;
}

.brand-content {
    position: relative;
}

.brand-content h2 {
    font-size: 32px;
    font-weight: 700;
    line-height: 1.3;
    margin-bottom: 20px;
}

.brand-content p {
    font-size: 18px;
    line-height: 1.6;
    margin-bottom: 30px;
    opacity: 0.9;
}

.benefits {
    list-style: none;
    margin-top: 30px;
}

.benefits li {
    display: flex;
    align-items: center;
    margin-bottom: 15px;
    font-size: 16px;
}

.benefits li i {
    margin-right: 12px;
    color: #ffcdd2;
    font-size: 18px;
}

/* Right Panel - Form */
.form-panel {
    flex: 1;
    padding: 50px 40px;
    background: white;
}

.form-header {
    text-align: center;
    margin-bottom: 40px;
}

.form-header h1 {
    color: #880e1f;
    font-size: 28px;
    font-weight: 700;
    margin-bottom: 10px;
}

.form-header p {
    color: #5a6d87;
    font-size: 16px;
}

.options {
    display: flex;
    flex-direction: column;
    gap: 25px;
    margin-bottom: 40px;
}

.option-card {
    border: 2px solid #e0e6f0;
    border-radius: 12px;
    padding: 25px;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.option-card:hover {
    border-color: #c40028;
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(196, 0, 40, 0.1);
}

.option-card.selected {
    border-color: #c40028;
    background: #fff1f2;
}

.option-card h3 {
    display: flex;
    align-items: center;
    color: #880e1f;
    font-size: 20px;
    margin-bottom: 15px;
}

.option-card h3 i {
    margin-right: 12px;
    font-size: 24px;
    color: #c40028;
}

.option-card p {
    color: #5a6d87;
    font-size: 16px;
    line-height: 1.6;
    padding-left: 36px;
}

.continue-btn {
    display: block;
    width: 100%;
    padding: 16px;
    background: linear-gradient(to right, #c40028, #ff5c5c);
    color: white;
    border: none;
    border-radius: 8px;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 5px 15px rgba(196, 0, 40, 0.3);
}

.continue-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 20px rgba(196, 0, 40, 0.4);
}

.continue-btn:active {
    transform: translateY(0);
}

.footer-links {
    display: flex;
    justify-content: center;
    margin-top: 30px;
    gap: 20px;
}

.footer-links a {
    color: #5a6d87;
    text-decoration: none;
    font-size: 14px;
    transition: color 0.3s ease;
}

.footer-links a:hover {
    color: #c40028;
    text-decoration: underline;
}

/* Responsive Design */
@media (max-width: 850px) {
    .container {
        flex-direction: column;
    }

    .brand-panel {
        padding: 40px 30px;
    }

    .form-panel {
        padding: 40px 30px;
    }
}

@media (max-width: 480px) {
    .brand-panel, .form-panel {
        padding: 30px 20px;
    }

    .brand-content h2 {
        font-size: 26px;
    }

    .form-header h1 {
        font-size: 24px;
    }

    .option-card {
        padding: 20px;
    }
}

